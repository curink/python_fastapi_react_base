{
  "compilerOptions": {
    // Arahkan path relatif dari root project
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Output & module settings
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    // React settings
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],

    // TypeScript strict mode
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}